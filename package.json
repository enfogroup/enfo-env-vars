{
  "name": "@enfo/env-vars",
  "version": "0.0.5",
  "description": "A small package for parsing process.env according to a configuration of your choosing.",
  "main": "index.js",
  "types": "index.d.ts",
  "repository": "https://github.com/enfogroup/enfo-env-vars.git",
  "author": "Urban Pettersson <urban.pettersson@enfogroup.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "cm": "git-cz",
    "clean": "rm -rf ./dist",
    "build-webpack": "webpack --config webpack.config.js",
    "build": "npm-run-all -s clean build-webpack",
    "prerelease": "yarn test && yarn build",
    "copy-to-dist": "cp package.json dist/ && cp *.md dist/ && cp .npmignore dist/",
    "release": "standard-version --no-verify",
    "lint": "eslint 'test/**/*.ts' 'src/**/*.ts'",
    "jest": "jest",
    "test": "npm-run-all -s lint jest",
    "test-watch": "jest --watch"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/jest": "^25.1.3",
    "@types/node": "^13.7.4",
    "@typescript-eslint/eslint-plugin": "^2.21.0",
    "@typescript-eslint/parser": "^2.21.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^25.2.1",
    "ts-loader": "^6.2.1",
    "tsconfig-paths": "^3.9.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "^3.8.2",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run lint",
      "pre-push": "npm run jest"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "standard-version": {
    "scripts": {
      "prerelease": "yarn prerelease",
      "postchangelog": "yarn copy-to-dist",
      "posttag": "echo 'Now run cd dist/ && yarn publish && cd ../ && git push --follow-tags origin master'"
    }
  }
}
