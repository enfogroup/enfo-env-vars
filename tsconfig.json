{
  "compilerOptions": {
    "lib": [
      "es2017"
    ],
    "removeComments": false,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strict": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "outDir": "lib",
    "baseUrl": "src",
    "paths": {
      "@test/*": [
        "../test/*"
      ],
      "@lib/*": [
        "lib/*"
      ],
      "@models/*" : [
        "models/*"
      ]
    }
  },
  "exclude": [
    "node_modules/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*"
  ]
}
